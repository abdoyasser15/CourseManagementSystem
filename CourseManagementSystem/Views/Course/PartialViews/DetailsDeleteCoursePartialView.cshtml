@model CourseViewModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<div class="w-50 m-auto">
    <div>
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" readonly/>
    </div>

    <div>
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" readonly/>
    </div>

    <div>
        <label asp-for="Hours" class="form-label"></label>
        <input asp-for="Hours" class="form-control" type="number" readonly/>
    </div>

    <div>
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" readonly/>
    </div>

    <div>
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" class="form-control" type="date" readonly/>
    </div>
    <div>
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" class="form-control" type="date" readonly/>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>