@model CourseViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<h1>Create New Course</h1>
<br />
<br />

<form asp-controller="Course" asp-action="Create" method="post" enctype="multipart/form-data">
    <partial name="PartialViews/CreateEdinCoursePartialView" />
    <input type="submit" value="Create" class="btn btn-primary" /> |
        @if (User.IsInRole("Instructor"))
        {
            <a asp-controller="Home" asp-action="Index" class="btn btn-light">Back To Home</a>
        }
        else
        {
            <a asp-controller="Course" asp-action="Index" class="btn btn-light">Back To List</a>
        }
</form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@section validationsScriptSection {
    <partial name="_ValidationScriptsPartial" />
}